                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView android:id="@+id/card2" android:layout_width="100dp" android:layout_height="175dp" android:layout_margin="12dp" android:foreground="?android:attr/selectableItemBackground" android:layout_rowWeight="1" android:layout_columnWeight="1" app:cardBackgroundColor="#e40a16" app:cardCornerRadius="20dp" app:cardElevation="10dp">
