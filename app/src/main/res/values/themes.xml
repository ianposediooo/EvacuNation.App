    <style name="CustomDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="materialAlertDialogTitleTextStyle">@style/TitleStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MessageStyle</item>
    </style>

    <style name="TitleStyle" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked">
        <item name="android:maxLines">10</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/regularmont</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="MessageStyle" parent="@style/MaterialAlertDialog.Material3.Body.Text.CenterStacked">
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/regularmont</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:singleLine">false</item>
    </style>


    <style name="pbarcolor">
        <item name="colorAccent">?attr/colorPrimary</item> <!-- Whatever color you want-->
    </style>

    <style name="SplashTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/md_theme_light_primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@color/md_theme_light_primary</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <!--        <item name="android:windowBackground">@color/md_theme_light_primary</item>-->
        <item name="android:background">@drawable/backround_splash</item>
    </style>

    <style name="Theme.EvacuNation.AppWidgetContainerParent" parent="Theme.Material3.DynamicColors.DayNight">

        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">28dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">14dp</item>
    </style>

    <style name="Theme.EvacuNation.AppWidgetContainer" parent="Theme.EvacuNation.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
